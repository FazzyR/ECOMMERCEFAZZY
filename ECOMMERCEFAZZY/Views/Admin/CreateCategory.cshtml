﻿@using ECOMMERCEFAZZY.ViewModels;
@model CreateCategoryViewModel

<h1 class="text-info">CreateProduct</h1>
<form asp-controller="Admin" asp-action="CreateCategory" method="post" role="form">
    <h4>Create a new Category</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>






    <div class="form-group">
        <div class="offset-md-2 col-md-10">
            <button type="submit" class="btn btn-success">CreateProduct</button>
        </div>
    </div>
</form>