
@model List<Product>

<form method="get" asp-action="AdminPanel" asp-controller="Admin" class="form-inline mb-3">
    <input type="text" name="searchTerm" class="form-control mr-2" placeholder="Search products" value="@ViewData["SearchTerm"]" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>



<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>@p.Description</td>
                <td>@p.Category.Name</td>
                <td>
                    <a asp-action="EditProduct" asp-controller="Admin" asp-route-id="@p.Id" class="btn btn-warning">Edit Product</a>
                    <a asp-action="ProductDetails" asp-controller="Admin" asp-route-id="@p.Id" class="btn btn-warning">Details</a>
                    <form asp-action="DeleteProduct" asp-controller="Admin" asp-route-id="@p.Id" method="get" class="d-inline">
                        <button type="submit" class="btn btn-warning">Delete Product</button>
                        
                    </form>

                </td>

            </tr>
        }
    </tbody>
</table>

<a asp-action="UsersDetails" asp-controller="Admin"  class="btn btn-warning">Details</a>
